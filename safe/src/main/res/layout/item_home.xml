<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
   android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="20dp"
    android:background="@mipmap/antispam_report_button"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_homeitem_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/safe_sjfd" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_homeitem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sjfd"
            android:lines="1"
            android:textSize="@dimen/ts17"
            android:textColor="@color/record_green"/>
        <TextView
            android:singleLine="true"
            android:id="@+id/tv_hoemitem_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sjfd_desc"
            android:textSize="@dimen/ts15"
            android:textColor="@color/renzhen_green"/>
    </LinearLayout>
</LinearLayout>
